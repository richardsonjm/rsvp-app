<h1>Listing invites for <%= @event.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Event</th>
      <th>Attending</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.name %></td>
        <td><%= @event.name %></td>
        <td><%= invite.attending %></td>
        <td><%= link_to 'Show', [@event, invite]  %></td>
        <td><%= link_to 'Edit', edit_event_invite_path(@event, invite) %></td>
        <td><%= link_to 'Destroy', [@event, invite], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

