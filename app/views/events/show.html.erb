<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Invites:</strong>
</p>

<table>
  <tbody>
    <% @event.invites.each do |invite| %>
      <tr>
        <td><%= invite.name %></td>
        <td><%= link_to 'Show', [@event, invite]  %></td>
        <td><%= link_to 'Edit', edit_event_invite_path(@event, invite) %></td>
        <td><%= link_to 'Destroy', [@event, invite], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></br>

